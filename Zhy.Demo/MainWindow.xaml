<Window
    x:Class="Zhy.Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Zhy.Demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <UniformGrid>
            <Button
                x:Name="buttonZhyDataGrid"
                Margin="10"
                Click="buttonZhyDataGrid_Click"
                Content="ZhyDataGrid"
                Style="{DynamicResource InfoButton}" />
            <Button
                x:Name="buttonZhyFormGrid"
                Margin="10"
                Click="buttonZhyFormGrid_Click"
                Content="ZhyFormGrid"
                Style="{DynamicResource SuccessButton}" />
        </UniformGrid>
    </Grid>
</Window>
